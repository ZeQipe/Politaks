# =============================================================================
# POLITAKS SERVER - Environment Variables
# =============================================================================
# Скопируйте этот файл в .env и заполните значения

# =============================================================================
# Django Settings
# =============================================================================

# Режим отладки (True/False)
DEBUG=True

# Окружение: development или production
DJANGO_ENV=development

# Секретный ключ Django (сгенерируйте свой для production!)
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-me-in-production

# Разрешённые хосты (через запятую)
ALLOWED_HOSTS=localhost,127.0.0.1

# Локализация
LANGUAGE_CODE=ru-ru
TIME_ZONE=Europe/Moscow

# CORS (разрешённые origins через запятую)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Database (PostgreSQL для production)
# =============================================================================

# Движок БД (для dev используется SQLite по умолчанию)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=politaks_db
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_HOST=localhost
# DB_PORT=5432

# =============================================================================
# Microservices URLs
# =============================================================================

# URL сервиса ассистентов (по умолчанию http://localhost:7999)
ASSISTANTS_API_URL=http://localhost:7999

# URL сервиса таблиц (по умолчанию http://localhost:7998)
SHEETS_API_URL=http://localhost:7998

# =============================================================================
# OpenAI API (для сервиса assistants)
# =============================================================================

# API ключ OpenAI
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Прокси для OpenAI (опционально)
PROXY=http://user:pass@proxy-host:port

# =============================================================================
# Google Sheets API (для сервиса sheets)
# =============================================================================

# Креды сервисного аккаунта Google (JSON строка)
GOOGLE_SH_CREDS={"type": "service_account", "project_id": "...", "private_key_id": "...", "private_key": "-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n", "client_email": "...@....iam.gserviceaccount.com", "client_id": "...", "auth_uri": "https://accounts.google.com/o/oauth2/auth", "token_uri": "https://oauth2.googleapis.com/token", "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs", "client_x509_cert_url": "https://www.googleapis.com/robot/v1/metadata/x509/...", "universe_domain": "googleapis.com"}

# =============================================================================
# Security
# =============================================================================

# Ключ шифрования для API ключей в БД
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# Gunicorn (для production/Docker)
# =============================================================================

# Количество воркеров (рекомендуется: CPU cores * 2 + 1)
GUNICORN_WORKERS=4

# Количество потоков на воркер
GUNICORN_THREADS=2

