# =============================================================================
# POLITAKS SERVER - Environment Variables
# =============================================================================

# =============================================================================
# Django Settings
# =============================================================================
DEBUG=True # True | False
DJANGO_ENV=development # development | production
SECRET_KEY=django-insecure-change-me-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
LANGUAGE_CODE=ru-ru
TIME_ZONE=Europe/Moscow
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Database (PostgreSQL для production)
# =============================================================================
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=name_of_your_db
# DB_USER=username_of_your_db
# DB_PASSWORD=password_of_your_db
# DB_HOST=localhost
# DB_PORT=5432

# =============================================================================
# Microservices URLs
# =============================================================================
DJANGO_API_URL=http://localhost:8000
ASSISTANTS_API_URL=http://localhost:7999
SHEETS_API_URL=http://localhost:7998

# =============================================================================
# Assistants API
# =============================================================================
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
PROXY=http://user:pass@proxy-host:port

# =============================================================================
# Sheets API
# =============================================================================
GOOGLE_SH_CREDS={"type": "service_account", "project_id": ...}

# =============================================================================
# Security
# =============================================================================
# Ключ шифрования для API ключей в БД
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-encryption-key-here

# Bearer токен для Auth API (используется клиентом для доступа к /auth/* эндпоинтам)
# python -c "import secrets; print(secrets.token_hex(32))"
API_BEARER_TOKEN=your-api-bearer-token-here

# Время жизни CSRF токена в секундах (по умолчанию 300 = 5 минут)
CSRF_TOKEN_TTL=300

# =============================================================================
# Gunicorn (production)
# =============================================================================
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
